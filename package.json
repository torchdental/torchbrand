{
  "name": "torchbrand",
  "version": "1.0.0",
  "repository": "git@github.com:torchdental/torchbrand.git",
  "description": "Library of useful styles and components for adding the Torch brand to a project",
  "main": "dist/css/torch-brand.css",
  "style": "dist/css/torch-brand.css",
  "scripts": {
    "build-css": "node-sass --include-path scss src/torch-brand.scss dist/css/torch-brand.css",
    "watch-css": "nodemon -e scss -x \"npm run build-css\"",
    "cp-far": "cp ./node_modules/@fortawesome/fontawesome-free-webfonts/webfonts/fa-regular-400.ttf ./assets/fonts/font-awesome/",
    "cp-fas": "cp ./node_modules/@fortawesome/fontawesome-free-webfonts/webfonts/fa-solid-900.ttf ./assets/fonts/font-awesome/",
    "cp-fab": "cp ./node_modules/@fortawesome/fontawesome-free-webfonts/webfonts/fa-brands-400.ttf ./assets/fonts/font-awesome/",
    "build-fa": "npm update @fortawesome/font-awesome-webfonts && npm run cp-far && npm run cp-fas && npm run cp-fab"
  },
  "devDependencies": {
    "node-sass": "^4.7.2",
    "nodemon": "^1.17.1"
  },
  "homepage": "./style_guide/style_guide.html",
  "dependencies": {
    "@fortawesome/fontawesome-free-webfonts": "^1.0.9"
  }
}
